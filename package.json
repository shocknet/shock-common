{
  "name": "shock-common",
  "version": "13.0.1",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "react-native": "dist/index.es.js",
  "types": "./dist/index.d.ts",
  "author": "Shock Network, INC",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src --ext .js,.ts",
    "prettify": "prettier --write \"src/**/*.{js,ts}\"",
    "format": "yarn prettify",
    "clean": "rimraf -rf dist",
    "compile": "tsc",
    "post-compile-a": "cp-cli dist/index.js dist/index.es.js",
    "post-compile-b": "cp-cli dist/index.d.ts dist/index.es.d.ts",
    "bundle": "parcel build dist/index.es.js --target node --out-file index.js",
    "build": "yarn clean && yarn compile && yarn post-compile-a && yarn post-compile-b && yarn bundle",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "immer": "^6.0.6",
    "lodash": "^4.17.19",
    "normalizr": "^3.6.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "redux-thunk": "^2.3.0",
    "uuid": "3.x.x"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/lodash": "^4.14.150",
    "@types/random": "^2.1.1",
    "@types/uuid": "3.x.x",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "cp-cli": "^2.0.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.2",
    "np": "^6.5.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "random": "^2.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --check",
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && yarn lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
